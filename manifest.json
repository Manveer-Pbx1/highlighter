{
    "manifest_version": 3,
    "name": "Simple Highlighter",
    "version": "1.0",
    "description": "A simple extension to highlight text on web pages.",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  